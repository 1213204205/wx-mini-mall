<!-- miniprogram/pages/mine/mine.wxml -->
<view class="container">

	<view class="mine-card">
		<view class="avatar">
			<open-data type="userAvatarUrl" class="avatar-pic"></open-data>
		</view>
		<view class="message">
			<open-data class="nickname" type="userNickName"></open-data>
		</view>
		<view class="right">
			<image class="qrcode" src="../../images/icon/qrcode.png"></image>
		</view>
	</view>


	<view class="item flex">
		<image src="../../images/icon/order.png" class="image" />
		<text>我的订单</text>
	</view>

	<view class="item flex" bindtap="toAddr">
		<image src="../../images/icon/addr.png" class="image" />
		<text>收货地址</text>
	</view>

	<view class="set flex">
		<image src="../../images/icon/setting.png" class="image" />
		<text>设置</text>
	</view>
</view>