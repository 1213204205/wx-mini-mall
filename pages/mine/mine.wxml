<!-- miniprogram/pages/mine/mine.wxml -->
<view class="container">

	<view class="mine-card">
		<view class="avatar">
            <open-data type="userAvatarUrl" class="avatar-pic"></open-data>
		</view>
		<view class="message">
            <open-data class="nickname" type="userNickName"></open-data>
		</view>
		<view class="right">
            <open-data type="userProvince" lang="zh_CN"></open-data> -
            <open-data type="userCity" lang="zh_CN"></open-data>
		</view>
	</view>

	<view class="item flex">
		<image src="../../images/订单.png" class="image" />
		<text>我的订单</text>
	</view>

	<view class="set flex">
		<image src="../../images/设 置.png" class="image" />
		<text>设置</text>
	</view>
</view>