/* miniprogram/pages/mine/mine.wxss */
.container{
    width: 100%;
    margin-top: 20rpx;
    color: black;
    font-size: 30rpx;
    overflow: hidden;
}
.mine-card{
    padding-left: 30rpx;
    background-color: #fff;
    height: 135rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.avatar{
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}
.avatar-pic{
    width: 100%;
    height: 100%;
}
.nickname{
    display: block;
    font-size: 30rpx;
}
.right{
    position: absolute;
    right: 50rpx;
}
.bottom{
    height: 40rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    background-color: #E8E8E8 ;
    font-size: 20rpx;
    line-height: 40rpx;
    border-radius: 5rpx;
}
.image{
    width: 55rpx;
    height: 55rpx;
    margin-right: 20rpx;
}
.flex{
    display: flex;
    align-items: center
}

.item{
    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
    padding-left: 40rpx;
    background-color: #fff;
}
.set{
    background-color: #fff;
    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
    padding-left: 40rpx;
}
